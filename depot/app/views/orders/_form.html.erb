<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= raw t('errore.template.header', count: @order.errors.count, model: t('activerecord.models.order')) %>.</h2>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label t('.name') %><br>
    <%= f.text_field :name, size: 56 %>
  </div>
  <div class="field">
    <%= f.label t('.address_html') %><br>
    <%= f.text_area :address, rows: 3, cols: 40 %>
  </div>
  <div class="field">
    <%= f.label t('.email') %><br>
    <%= f.text_field :email, size: 56 %>
  </div>
  <div class="field">
    <%= f.label t('.pay_type') %><br>
    <%= f.select :pay_type, Order::PAYMENT_TYPES,
                      prompt: t('.pay_prompt_html') %>
  </div>
  <div class="actions">
    <%= f.submit t('.submit') %>
  </div>
<% end %>
