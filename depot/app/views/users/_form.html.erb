<%= simple_form_for(@user) do |f| %>
  <fieldset>
  <legend>Enter User Details</legend>

  <%= f.input :name, input_html: { maxlength: 40 } %>
  <%= f.input :username, input_html: { maxlength: 40 }  %>
  <%= f.input :password, input_html: { maxlength: 40 }  %>
  <%= f.input :password_confirmation, input_html: { maxlength: 40 }  %>
  <%= f.button :submit %>

  </fieldset>

<% end %>
